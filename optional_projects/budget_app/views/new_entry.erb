<form action="/new_entry" method="POST">
  <p>
    <select required name="category">
      <option value="" disabled selected>Category</option>
      <% @category_options.each do |category| %>
        <% category_value = snake_case(category) %>
        <option value="<%= category_value %>"><%= category %></option>
      <% end %>

    </select>
  </p>
  <p>
    <label>Amount:&nbsp;</label>
    <input required type="number" name="amount" min="0" placeholder="in $">
  </p>
  <p>
    <label for="date">Date:&nbsp;</label>
    <input required type="date" name="date" value="<%= Time.now.to_date %>">
  </p>
  <input type="hidden" name="type" value="<%= @type %>">
  <button type="submit">Add <%= @type %></button>
</form>